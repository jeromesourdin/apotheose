{% extends '::base.html.twig' %}

{% block body %}
<div class="container">
    
    {% if client %}
        <div class="alert alert-success">Le formulaire a bien été soumis.</div>
        {{ dump(client) }}
    {% endif %}
    
    <h1>Formulaire</h1>
    
    <p>
        Ce projet reprend l'exemple du "client" du chapitre sur les formulaires.
        Une fois le formulaire ci-dessous soumis, un objet  de type
        <strong>Eni\DemoBundle\Model\Client</strong> sera à votre disposition dans
        l'action du contrôleur.
    </p>
    
    
    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, { attr: { class: 'form-control' } }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.date_de_naissance) }}
            <div class="row">
                <div class="col-xs-2">
                    {{ form_widget(form.date_de_naissance.day, { attr: { class: 'form-control' } }) }}
                </div>
                <div class="col-xs-2">
                    {{ form_widget(form.date_de_naissance.month, { attr: { class: 'form-control' } }) }}
                </div>
                <div class="col-xs-2">
                    {{ form_widget(form.date_de_naissance.year, { attr: { class: 'form-control' } }) }}
                </div>      
            </div>
        </div>
        {{ form_widget(form.valider, { attr: { class: 'btn btn-primary' } }) }}
    {{ form_end(form) }}
    
</div>

{% endblock %}
